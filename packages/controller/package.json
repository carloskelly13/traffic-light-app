{
  "name": "traffic-light-controller",
  "version": "1.0.0",
  "private": true,
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node src/index.ts\""
  },
  "keywords": [],
  "author": "Carlos Kelly",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "onoff": "^6.0.3",
    "picocolors": "^1.0.0",
    "pusher": "^5.1.3",
    "pusher-js": "^8.3.0",
    "tsup": "7.1.0"
  },
  "tsup": {
    "dts": true,
    "bundle": false,
    "treeshake": true,
    "target": "node16",
    "format": [
      "esm",
      "cjs"
    ],
    "entry": [
      "src/**/*.ts"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "20.4.5",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6"
  }
}
